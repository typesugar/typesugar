{
  "name": "@typesugar/eslint-plugin",
  "version": "0.1.0",
  "description": "ðŸ§Š ESLint plugin for typesugar macro system - lints transformed output",
  "author": "Dean Povey <dean.povey@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/typesugar/typesugar.git",
    "directory": "packages/eslint-plugin"
  },
  "homepage": "https://github.com/typesugar/typesugar/tree/main/packages/eslint-plugin#readme",
  "bugs": {
    "url": "https://github.com/typesugar/typesugar/issues"
  },
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run"
  },
  "keywords": [
    "eslint",
    "eslint-plugin",
    "typesugar",
    "typescript",
    "macros"
  ],
  "peerDependencies": {
    "eslint": ">=8.0.0",
    "typescript": ">=5.0.0"
  },
  "dependencies": {
    "@typesugar/preprocessor": "workspace:*",
    "@typesugar/transformer": "workspace:*"
  },
  "devDependencies": {
    "@types/eslint": "^8.56.0",
    "eslint": "^9.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.8.3",
    "vitest": "^2.0.0"
  },
  "sideEffects": false
}
