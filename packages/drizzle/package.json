{
  "name": "@typesugar/drizzle-adapter",
  "version": "0.1.0",
  "private": true,
  "description": "ðŸ§Š Drizzle adapter for typesugar - type-safe SQL tagged templates that compile to Drizzle's sql template",
  "author": "Dean Povey <dean.povey@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/typesugar/typesugar.git",
    "directory": "packages/drizzle"
  },
  "homepage": "https://github.com/typesugar/typesugar/tree/main/packages/drizzle#readme",
  "bugs": {
    "url": "https://github.com/typesugar/typesugar/issues"
  },
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "keywords": [
    "typescript",
    "macros",
    "drizzle",
    "drizzle-orm",
    "sql",
    "database",
    "type-safe",
    "query-builder"
  ],
  "dependencies": {
    "@typesugar/core": "workspace:*",
    "@typesugar/sql": "workspace:*"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0",
    "drizzle-orm": ">=0.30.0"
  },
  "peerDependenciesMeta": {
    "drizzle-orm": {
      "optional": true
    }
  },
  "devDependencies": {
    "drizzle-orm": "^0.30.0",
    "vitest": "^2.0.0"
  },
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false
}
