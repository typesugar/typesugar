{
  "name": "@typesugar/drizzle",
  "version": "0.1.0",
  "description": "Drizzle adapter for typesugar - type-safe SQL tagged templates that compile to Drizzle's sql template",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "keywords": [
    "typescript",
    "macros",
    "drizzle",
    "drizzle-orm",
    "sql",
    "database",
    "type-safe",
    "query-builder"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@typesugar/core": "workspace:*",
    "@typesugar/sql": "workspace:*"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0",
    "drizzle-orm": ">=0.30.0"
  },
  "peerDependenciesMeta": {
    "drizzle-orm": {
      "optional": true
    }
  },
  "devDependencies": {
    "drizzle-orm": "^0.30.0"
  },
  "files": [
    "dist",
    "src"
  ]
}