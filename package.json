{
  "name": "ttfx-monorepo",
  "private": true,
  "description": "Compile-time macros for TypeScript -- inspired by Rust, Scala 3, and Zig",
  "type": "module",
  "scripts": {
    "build": "pnpm -r --filter '!ttfx-example-*' build",
    "build:watch": "pnpm -r --parallel --filter '!ttfx-example-*' build:watch",
    "build:all": "pnpm -r build",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "typecheck": "pnpm -r --filter '!ttfx-example-*' typecheck",
    "lint": "pnpm -r lint"
  },
  "keywords": [
    "typescript",
    "macros",
    "metaprogramming",
    "compile-time",
    "codegen",
    "transform",
    "comptime",
    "derive",
    "reflection"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@ttfx/contracts": "workspace:*",
    "@ttfx/contracts-refined": "workspace:*",
    "unplugin-ttfx": "workspace:*",
    "@ttfx/testing": "workspace:*",
    "@ttfx/type-system": "workspace:*",
    "@types/node": "^22.15.30",
    "@types/react": "^19.2.14",
    "react": "^19.2.4",
    "ts-patch": "^3.3.0",
    "tsup": "^8.5.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.2"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "cosmiconfig": "^9.0.0"
  }
}
