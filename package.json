{
  "name": "typesugar-monorepo",
  "private": true,
  "description": "ðŸ§Š Compile-time macros for TypeScript -- inspired by Rust, Scala 3, and Zig",
  "type": "module",
  "scripts": {
    "postinstall": "node scripts/setup-ts-plugin.js",
    "build": "pnpm -r --filter '!typesugar-example-*' --workspace-concurrency=1 build",
    "build:watch": "pnpm -r --parallel --filter '!typesugar-example-*' build:watch",
    "build:all": "pnpm -r build",
    "test": "vitest run",
    "test:failed": "bash scripts/rerun-failed.sh",
    "test:watch": "vitest",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "typecheck": "pnpm -r --filter '!typesugar-example-*' typecheck",
    "lint": "pnpm -r lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "keywords": [
    "typescript",
    "macros",
    "metaprogramming",
    "compile-time",
    "codegen",
    "transform",
    "comptime",
    "derive",
    "reflection"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/node": "^22.15.30",
    "@types/react": "^19.2.14",
    "@typesugar/contracts": "workspace:*",
    "@typesugar/contracts-refined": "workspace:*",
    "@typesugar/core": "workspace:*",
    "@typesugar/fp": "workspace:*",
    "@typesugar/macros": "workspace:*",
    "@typesugar/mapper": "workspace:*",
    "@typesugar/prettier-plugin": "workspace:*",
    "@typesugar/std": "workspace:*",
    "@typesugar/strings": "workspace:*",
    "@typesugar/testing": "workspace:*",
    "@typesugar/transformer": "workspace:*",
    "@typesugar/ts-plugin": "workspace:*",
    "@typesugar/type-system": "workspace:*",
    "magic-string": "^0.30.21",
    "prettier": "^3.5.0",
    "react": "^19.2.4",
    "ts-patch": "^3.3.0",
    "tsup": "^8.5.1",
    "typescript": "^5.8.3",
    "typesugar": "workspace:*",
    "unplugin-typesugar": "workspace:*",
    "vitepress": "^1.6.4",
    "vitest": "^3.2.2"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "cosmiconfig": "^9.0.0"
  }
}
